<p id="notice"><%= notice %></p>

<h1>Meus dados</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>E-mail</th>
      <th>RG</th>
      <th>CPF</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if current_user && (user.id == current_user.id) %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.rg %></td>
          <td><%= user.cpf %></td>
          <td><%= link_to 'Ver', user %></td>
          <td><%= link_to 'Editar', edit_user_path(user) %></td>
          <td><%= link_to 'Deletar', user, method: :delete, data: { confirm: 'Confirma remoção deste usuário?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>

<% if @contas %>
  <%= link_to 'ver minha conta', "/accounts/#{@contas}" %>
<% else %>
  <%= link_to 'Criar conta', new_account_path %>
<% end %>